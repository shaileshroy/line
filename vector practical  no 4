#practical  no 4
import numpy as np
print("enter elements of vector u separated by comma:-")
s=input()
l=list(map(int,s.split(',')))
u=np.array(1)
print("enter elements of vector v separated by comma:-")
s=input()
l=list(map(int,s.split(',')))
v=np.array(1)
while True:
    print('Select vector operation')
    print('1: Addition  ')
    print('2: Substraction')
    print('3:scaler multipication')
    print('4:dot product')
    print('5:Exit')
    ch=int(input('Enter choice for operation'))
    if ch==1: 
        print('Addition of vector u&v is(u+v)',u+v)
    elif ch==2:
        print('Addition of vector u&v is(u-v)',u-v)
    elif ch==3:
        print('to perform scaler multiplication (au)')
        a=int(input('enter scaler value of a:'))
        print('scaler multiplication(au)=>',a*u)
         
    elif ch==4:
        print('dot product of u&v(u.v)=>',np.dot(u,v))
    else:
        break 
